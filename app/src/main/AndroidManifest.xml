<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thegrate.kintrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DeviceChooserActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceControlActivity"
            android:label="@string/title_activity_device_control"
            android:parentActivityName=".DeviceChooserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thegrate.kintrol.DeviceChooserActivity" />
        </activity>
    </application>

</manifest>
